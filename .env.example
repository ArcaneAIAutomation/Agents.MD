# ============================================================================
# UCIE Database Configuration (REQUIRED)
# ============================================================================

# Supabase PostgreSQL Database URL
# Get this from: https://supabase.com/dashboard → Settings → Database
# IMPORTANT: Use port 6543 (Transaction mode), not 5432
DATABASE_URL=postgres://postgres.xxxxx:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ============================================================================
# AI APIs (REQUIRED for UCIE)
# ============================================================================

# OpenAI ChatGPT-5.1 (for AI summaries and trade analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# OpenAI Model Configuration (OPTIONAL)
# Options:
#   - gpt-chatgpt-5.1-mini (recommended for testing - faster, cost-effective)
#   - gpt-chatgpt-5.1-latest (for production - full reasoning model)
#   - gpt-4o (fallback - previous stable model)
# Default: gpt-chatgpt-5.1-mini
OPENAI_MODEL=gpt-chatgpt-5.1-mini

# Google Gemini Pro (faster AI alternative)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=...

# Caesar AI (for deep research)
# Get from: https://caesar.xyz/api-keys
CAESAR_API_KEY=...

# ============================================================================
# Market Data APIs (REQUIRED)
# ============================================================================

# CoinMarketCap (primary market data)
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=...

# CoinGecko (secondary market data)
# Get from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=...

# Kraken (exchange data)
# Get from: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=...
KRAKEN_PRIVATE_KEY=...

# ============================================================================
# News APIs (REQUIRED)
# ============================================================================

# NewsAPI (crypto news)
# Get from: https://newsapi.org/account
NEWS_API_KEY=...

# CryptoCompare (additional news)
# Get from: https://www.cryptocompare.com/cryptopian/api-keys
CRYPTOCOMPARE_API_KEY=...

# ============================================================================
# Social Sentiment APIs (OPTIONAL)
# ============================================================================

# LunarCrush (social metrics)
# Get from: https://lunarcrush.com/developers/api
LUNARCRUSH_API_KEY=...

# Twitter/X API (tweet analysis)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=...
TWITTER_ACCESS_TOKEN=...
TWITTER_ACCESS_TOKEN_SECRET=...

# Reddit API (community sentiment)
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=...
REDDIT_CLIENT_SECRET=...
REDDIT_USER_AGENT=...

# ============================================================================
# Blockchain APIs (OPTIONAL)
# ============================================================================

# Etherscan V2 (Ethereum data)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=...

# BSCScan (Binance Smart Chain)
# Get from: https://bscscan.com/myapikey
BSCSCAN_API_KEY=...

# Polygonscan (Polygon network)
# Get from: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=...

# Blockchain.com (Bitcoin data)
# Get from: https://www.blockchain.com/api
BLOCKCHAIN_API_KEY=...

# Solana RPC (Solana blockchain)
# Get from: https://www.quicknode.com/ or https://www.alchemy.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_FALLBACK_URL=https://api.mainnet-beta.solana.com

# ============================================================================
# DeFi APIs (OPTIONAL)
# ============================================================================

# DeFiLlama (TVL data) - Public API, no key needed
# No configuration required

# ============================================================================
# Derivatives APIs (OPTIONAL)
# ============================================================================

# CoinGlass (derivatives data) - Requires paid plan
COINGLASS_API_KEY=...

# ============================================================================
# Authentication (REQUIRED for production)
# ============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-32-byte-random-string-here

# JWT Expiration
JWT_EXPIRATION=7d
JWT_REMEMBER_ME_EXPIRATION=30d

# CRON Secret (for scheduled jobs)
CRON_SECRET=your-32-byte-random-string-here

# ============================================================================
# Rate Limiting (OPTIONAL - uses in-memory fallback if not set)
# ============================================================================

# Upstash Redis (for distributed rate limiting)
# Get from: https://upstash.com/
KV_REST_API_URL=https://your-redis.upstash.io
KV_REST_API_TOKEN=...

# Rate Limit Configuration
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# Email (OPTIONAL - for notifications)
# ============================================================================

# Office 365 Email
OFFICE365_EMAIL=your-email@domain.com
OFFICE365_PASSWORD=your-app-password

# ============================================================================
# Deployment Configuration
# ============================================================================

# Environment
NODE_ENV=production
ENABLE_LIVE_DATA=true

# Vercel Configuration
VERCEL_URL=your-app.vercel.app

# ============================================================================
# Veritas Protocol (OPTIONAL - Data Validation System)
# ============================================================================

# Enable Veritas Protocol data validation
# Set to 'true' to enable cross-validation, logical consistency checks,
# and transparent discrepancy reporting for institutional-grade analysis
# Default: false (disabled)
ENABLE_VERITAS_PROTOCOL=false

# ============================================================================
# Timeouts (OPTIONAL - uses defaults if not set)
# ============================================================================

# Caesar AI timeout (15 minutes)
CAESAR_TIMEOUT_MS=900000

# OpenAI timeout (60 seconds)
OPENAI_TIMEOUT_MS=60000

# Gemini timeout (60 seconds)
GEMINI_TIMEOUT_MS=60000

# API fetch timeout (30 seconds)
API_TIMEOUT_MS=30000

# ============================================================================
# Solana Configuration (OPTIONAL)
# ============================================================================

SOLANA_NETWORK=mainnet-beta
SOLANA_COMMITMENT=confirmed
SOLANA_RPC_TIMEOUT_MS=30000

# Solscan API (optional, for enhanced data)
SOLSCAN_API_KEY=...

# ============================================================================
# NOTES
# ============================================================================

# 1. Copy this file to .env.local:
#    cp .env.example .env.local

# 2. Fill in your actual API keys and secrets

# 3. NEVER commit .env.local to git (it's in .gitignore)

# 4. For production, set these in Vercel:
#    https://vercel.com/dashboard → Settings → Environment Variables

# 5. Required for database setup:
#    - DATABASE_URL

# 6. Required for UCIE to work:
#    - DATABASE_URL
#    - OPENAI_API_KEY or GEMINI_API_KEY
#    - CAESAR_API_KEY
#    - COINMARKETCAP_API_KEY
#    - NEWS_API_KEY

# 7. Check your configuration:
#    npm run check:env
