{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "functions": {
    "pages/api/**.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "NEWS_API_KEY": "@news-api-key", 
    "ALPHA_VANTAGE_API_KEY": "@alpha-vantage-api-key"
  }
}
